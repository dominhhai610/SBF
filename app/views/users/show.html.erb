<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
</div>
<div class="col-md-8">
    <% if @user.micropots.any? %>
      <h3>Micropots (<%= @user.micropots.count %>)</h3>
      <ol class="micropots">
     <%= render @micropots %>
      </ol>
      <%= will_paginate @micropots %>
    <% end %>
  </div>